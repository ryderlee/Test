<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.test.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.example.test.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.test.ResturantInfoActivity"
            android:label="@string/title_activity_resturant_info"
            android:parentActivityName="com.example.test.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.test.MainActivity" />
        </activity>
        <activity
            android:name="com.example.test.RestaurantInfo"
            android:label="@string/title_activity_restaurant_info"
            android:parentActivityName="com.example.test.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.test.MainActivity" />
        </activity>
        <activity
            android:name="com.example.test.RestaurantInfoActivity"
            android:label="@string/title_activity_restaurant_info"
            android:parentActivityName="com.example.test.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.test.MainActivity" />
        </activity>
        <activity
            android:name="com.example.test.SigninOptionActivity"
            android:label="@string/title_activity_signin_option" >
        </activity>
        <activity
            android:name="com.example.test.SigninActivity"
            android:label="@string/title_activity_signin"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.test.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="com.example.test.BookingActivity"
            android:label="@string/title_activity_booking" >
        </activity>
        <activity
            android:name="com.example.test.GuestInfoActivity"
            android:label="@string/title_activity_guest_info" >
        </activity>
        <activity
            android:name="com.example.test.FullScreenAlbumActivity"
            android:label="@string/title_activity_full_screen_album"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
    </application>

</manifest>
