<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GuestInfoActivity" >

    <Button
        android:id="@+id/guestBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Back"
        android:background="@drawable/common_button_background"
        android:minHeight="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:onClick="guestBackButton_onClick" />

    <Button
        android:id="@+id/guestNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Next"
        android:background="@drawable/common_button_background"
        android:minHeight="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:onClick="guestNextButton_onClick" />
    
    <LinearLayout
        android:id="@+id/bookingInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/guestNextButton"
        android:layout_marginTop="20dp" >
        <include layout="@layout/view_booking_info" />
    </LinearLayout>

    <TextView
        android:id="@+id/reserveAsGuestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guestBackButton"
        android:layout_below="@+id/bookingInfoView"
        android:layout_marginTop="50dp"
        android:text="RESERVE AS A GUEST" />

    <EditText
        android:id="@+id/guestFirstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reserveAsGuestTextView"
        android:layout_marginTop="15dp"
        android:hint="First name"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/guestLastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/guestFirstNameEditText"
        android:layout_marginTop="15dp"
        android:hint="Last name"
        android:ems="10" />

    <EditText
        android:id="@+id/guestEmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/guestLastNameEditText"
        android:layout_marginTop="15dp"
        android:hint="Email"
        android:ems="10" />

    <EditText
        android:id="@+id/guestPhoneEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/guestEmailEditText"
        android:layout_marginTop="15dp"
		android:hint="Phone"
		android:inputType="number"
        android:maxLength="8"
        android:ems="10" />

</RelativeLayout>
